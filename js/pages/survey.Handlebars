<script>
	$(".survey").text(function () {
    return $(this).text().replace(/(\w)(\w*)/g, (_, firstChar, rest) => firstChar + rest.toLowerCase()); 
	});

	function submitSurvey(){

		var formData = JSON.stringify({
			phone: $("#phoneStatus").val(),
			comment: $('select[name="comment"], textarea[name="comment"]').val(),
		});

		console.log(formData);

		Swal.fire({
			title: "Survey",
			text: "Survey submitted !",
			type: "success"
		}).then(result => {
					if (result.value) {
						window.location.href = "index.html#home";
					}
				});
		}	

	function startSurvey(){
			Swal.fire({
        title: "Survey",
        text: "The time starts now !",
        type: "success"
			});
	}
</script>